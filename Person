public class Person {
    public int numberofstudent = 180;
    public String name = "Default";
    public void say (String name) {
        System.out.println("Hello, " + name);
    }
    public Person  () {}
    public Person(int num, String name){
        numberofstudent = num;
        this.name = name;
    }

    //конструктор
    public Person (String name) {
        this.name = name;

    }
}
